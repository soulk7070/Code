{
  "manifest_version": 3,
  "name": "Auto Keyword Research (MVP)",
  "version": "1.0.0",
  "description": "Ambil jumlah hasil pencarian per keyword (default: Adobe Stock).",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auto Research"
  },
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://stock.adobe.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "data:image/png;base64,iVBORw0KGgo=",
    "32": "data:image/png;base64,iVBORw0KGgo=",
    "128": "data:image/png;base64,iVBORw0KGgo="
  }
}
